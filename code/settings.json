{
	//#region languages and formatting
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[elixir]": {
		"editor.defaultFormatter": "JakeBecker.elixir-ls"
	},
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"[xml]": {
		"editor.defaultFormatter": "redhat.vscode-xml"
	},
	"[dockercompose]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"editor.autoIndent": "advanced",
		"editor.quickSuggestions": {
			"other": true,
			"comments": false,
			"strings": true
		},
		"editor.defaultFormatter": "redhat.vscode-yaml"
	},
	"[github-actions-workflow]": {
		"editor.defaultFormatter": "redhat.vscode-yaml"
	},
	//#endregion

	//#region vscode natives
	"diffEditor.codeLens": true,
	"diffEditor.experimental.showMoves": true,
	"diffEditor.ignoreTrimWhitespace": true,
	"editor.acceptSuggestionOnEnter": "smart",
	"editor.accessibilitySupport": "off",
	"editor.autoIndentOnPaste": true,
	"editor.bracketPairColorization.enabled": true,
	"editor.cursorBlinking": "expand",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.dragAndDrop": false,
	"editor.foldingImportsByDefault": true,
	"editor.fontFamily": "Consolas ligaturized v3",
	"editor.fontLigatures": true,
	"editor.fontSize": 17,
	"editor.guides.bracketPairs": true,
	"editor.guides.bracketPairsHorizontal": true,
	"editor.minimap.renderCharacters": false,
	"editor.mouseWheelZoom": true,
	"editor.rulers": [120],
	"editor.smoothScrolling": true,
	"editor.stickyScroll.enabled": false,
	"editor.suggest.preview": true,
	"editor.tabSize": 2,
	"editor.wordBasedSuggestions": "off",
	"editor.wordWrapColumn": 120,
	"editor.wrappingStrategy": "advanced",
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.fileNesting.enabled": true,
	"files.autoGuessEncoding": true,
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"git.autofetch": true,
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"git.replaceTagsWhenPull": true,
	"security.workspace.trust.untrustedFiles": "open",
	"terminal.integrated.defaultProfile.windows": "Nushell",
	"terminal.integrated.fontFamily": "MesloLGM Nerd Font Mono",
	"workbench.colorTheme": "Bluloco Dark Italic",
	"workbench.iconTheme": "vscode-icons",
	"workbench.list.smoothScrolling": true,
	"workbench.sideBar.location": "right",

	"javascript.inlayHints.functionLikeReturnTypes.enabled": true,
	"javascript.inlayHints.parameterNames.enabled": "literals",
	"javascript.inlayHints.propertyDeclarationTypes.enabled": true,
	"javascript.inlayHints.variableTypes.enabled": true,
	"javascript.referencesCodeLens.enabled": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.tsserver.experimental.enableProjectDiagnostics": true,
	//#endregion

	"dataWrangler.experiments.autoDetectCsvDelimiter": true,
	"docker.extension.enableComposeLanguageServer": false,
	"eslint.lintTask.enable": true,
	"eslint.validate": ["javascript", "javascriptreact", "svelte"],
	"github.copilot.enable": {
		"*": false,
		"plaintext": false,
		"markdown": false,
		"scminput": false
	},
	"gitlens.ai.model": "vscode",
	"gitlens.ai.vscode.model": "copilot:gpt-4.1",
	"increment-selection.topToBottom": true,
	"livePreview.notifyOnOpenLooseFile": false,
	"prettier.useTabs": true,
	"redhat.telemetry.enabled": false,
	"svelte.enable-ts-plugin": true,
	"tailwindCSS.emmetCompletions": true,
	"vsicons.dontShowNewVersionMessage": true
}
